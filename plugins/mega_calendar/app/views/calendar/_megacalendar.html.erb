      eventDidMount: function(info) {
  const title = info.event.title;
  const desc = info.event.extendedProps.description || "";
  
  // Создаем HTML тултипа с возможностью клика по ссылкам
  const fullTooltip = `
    <div class="event-tooltip-content">
      <strong>${title}</strong>
      ${desc ? `<div>${desc}</div>` : ''}
    </div>
  `;
  
  let tooltip = null;
  let tooltipTimeout = null;
  let isHoveringTooltip = false;

  $(info.el).hover(
    function(event) {
      // Отменяем предыдущий таймер
      if (tooltipTimeout) {
        clearTimeout(tooltipTimeout);
        tooltipTimeout = null;
      }
      
      // Если тултип уже существует, просто показываем его
      if (tooltip && tooltip.is(':visible')) {
        return;
      }
      
      // Создаем новый тултип
      tooltip = $('<div class="event-tooltip"></div>').html(fullTooltip);
      $('body').append(tooltip);
      
      // Позиционируем
      const tooltipWidth = tooltip.outerWidth();
      const tooltipHeight = tooltip.outerHeight();
      const viewportWidth = $(window).width();
      
      let left = event.pageX + 10;
      let top = event.pageY + 10;
      
      // Проверяем, чтобы не выходил за правый край
      if (left + tooltipWidth > viewportWidth) {
        left = event.pageX - tooltipWidth - 10;
      }
      
      tooltip.css({
        top: top,
        left: left,
        opacity: 0
      }).show().animate({opacity: 1}, 200);
      
      // Автоскрытие через 2 секунды (увеличил время)
      tooltipTimeout = setTimeout(function() {
        if (tooltip && !isHoveringTooltip) {
          hideTooltip();
        }
      }, 2000);
      
      // Обработчики для самого тултипа
      tooltip.hover(
        function() {
          // При наведении на тултип - отменяем скрытие
          isHoveringTooltip = true;
          if (tooltipTimeout) {
            clearTimeout(tooltipTimeout);
            tooltipTimeout = null;
          }
        },
        function() {
          // При уходе с тултипа - скрываем через 0.5 секунды
          isHoveringTooltip = false;
          tooltipTimeout = setTimeout(hideTooltip, 500);
        }
      );
      
      // Закрытие при клике вне тултипа
      $(document).on('click.tooltipClose', function(e) {
        if (tooltip && !tooltip.is(e.target) && tooltip.has(e.target).length === 0) {
          hideTooltip();
        }
      });
    },
    function() {
      // При уходе с события - скрываем через 0.5 секунды, если не наведены на тултип
      if (!isHoveringTooltip) {
        tooltipTimeout = setTimeout(hideTooltip, 500);
      }
    }
  );
  
  function hideTooltip() {
    if (tooltipTimeout) {
      clearTimeout(tooltipTimeout);
      tooltipTimeout = null;
    }
    if (tooltip) {
      tooltip.animate({opacity: 0}, 200, function() {
        $(this).remove();
      });
      tooltip = null;
    }
    isHoveringTooltip = false;
    $(document).off('click.tooltipClose');
  }
},
