<div class="contextual">
<%= link_to l(:label_questions_status_new), new_questions_status_path, :class => 'icon icon-add' %>
</div>

<h3><%=l(:label_questions_status_plural)%></h3>

<table class="list questions_statuses">
  <thead><tr>
  <th><%=l(:field_status)%></th>
  <th><%=l(:label_questions_status_closed)%></th>
  <th></th>
  </tr></thead>
  <tbody>
<% for status in QuestionsStatus.sorted %>
  <tr class="<%= cycle("odd", "even") %>">
  <td class="name"><span class="color" style="border: 1px solid #D7D7D7;background-color: <%= status.color %>;">&nbsp;&nbsp;&nbsp;&nbsp;</span> <%= link_to status.name, edit_questions_status_path(status) %></td>
  <td align="center"><%= checked_image status.is_closed? %></td>
  <td class="buttons">
    <%= reorder_handle(status, :url => questions_status_path(status), :param => 'questions_status') if respond_to?(:reorder_handle) %>    
    <%= delete_link questions_status_path(status) %>
  </td>
  </tr>
<% end %>
  </tbody>
</table>

<% html_title(l(:label_questions_status_plural)) -%>

<%= javascript_tag do %>
  $(function() { $("table.questions_statuses tbody").positionedItems(); });
<% end if respond_to?(:reorder_handle) %>
